{% assign image_url = section.settings.image | img_url: '1600x' %}
{% render 'event-detail',
    img_url: image_url,
    image: section.settings.image,
    highlighted_information: section.settings.highlighted_information,
    heading: section.settings.heading,
    additional_info: section.settings.additional_info,
    description: section.settings.description,
    date_location: section.settings.date_location,
    link_url: section.settings.link_url,
    link_text: section.settings.link_text
%}

{% schema %}
{
  "name": "Event Detail",
  "tag": "section",
  "settings": [
    {
        "type": "text",
        "id": "highlighted_information",
        "label": "Highlighted information"
    },
    {
        "type": "text",
        "id": "heading",
        "label": "Heading"
    },
    {
        "type": "text",
        "id": "additional_info",
        "label": "Additional Info"
    },
    {
        "type": "richtext",
        "id": "description",
        "label": "Event description"
    },
    {
        "type": "richtext",
        "id": "date_location",
        "label": "Date and Location"
    },
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    },
    {
        "type": "header",
        "content": "Anchor link"
    },
    {
        "type": "text",
        "id": "link_text",
        "label": "Text",
        "default": "Inside the Sale + Price Table"
    },
    {
        "type": "url",
        "id": "link_url",
        "label": "Link"
    }
  ],
  "blocks": [],
  "presets": [
        {
            "name": "Event Detail"
        }
    ]
}
{% endschema %}