{% if template == 'index' %}
  {%- assign simpleMode = true -%}
{% endif %}

{% render 'header', menu: section.settings.main_linklist, wrapper: false, simpleMode: simpleMode, menu_content: section.blocks %}

{% render 'form_modal', modal_content: section.blocks %}

