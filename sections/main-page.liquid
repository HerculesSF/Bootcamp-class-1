<div class="container">
  <div class="page-width page-width--narrow">
    {% if section.settings.show_title %}
      <h1 class="main-page-title page-title h0" style="text-align: {{ section.settings.text_align }};">
        {{ page.title | escape }}
      </h1>
    {% endif %}
    <div class="rte">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page content",
  "tag": "section",
  "class": "spaced-section page_section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "default": true,
      "label": "Show page title"
    },
    {
        "type": "select",
        "id": "text_align",
        "options": [
            { "value": "left", "label": "Left"},
            { "value": "right", "label": "Right"},
            { "value": "center", "label": "Center"}
        ],
        "label": "Title Align"
    }
  ]
}
{% endschema %}
