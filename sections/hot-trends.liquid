{%- assign imgSmallSrc = section.settings.small_image | img_url: '1024x' -%}
{%- assign imgLargeSrc = section.settings.large_image | img_url: '1024x' -%}

{% render 'hot-trends', 
heading: section.settings.heading,
small_image: section.settings.small_image,
small_title: section.settings.small_title,  
small_description: section.settings.small_description,  
small_link: section.settings.small_link,  
large_image: section.settings.large_image
large_title: section.settings.large_title,
large_description: section.settings.large_description,  
large_link: section.settings.large_link,
imgSmallSrc: imgSmallSrc,
imgLargeSrc: imgLargeSrc%}

{% schema %}
{
  "name": "Hot Trends",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Hot Trends"
    },
    {
      "type": "header",
      "content": "Trend small"
    },
    {
      "type": "image_picker",
      "id": "small_image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "small_title",
      "label": "Title",
      "default": "Swim Good"
    },
    {
      "type": "text",
      "id": "small_description",
      "label": "Description",
      "default": "Introducing swim in bra sizing"
    },
    {
      "type": "url",
      "id": "small_link",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "Trend large"
    },
    {
      "type": "image_picker",
      "id": "large_image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "large_title",
      "label": "Title",
      "default": "White Hot Wedding"
    },
    {
      "type": "text",
      "id": "large_description",
      "label": "Description",
      "default": "Here comes bridal season"
    },
    {
      "type": "url",
      "id": "large_link",
      "label": "Link"
    }
  ],
  "presets": [
    {
        "name": "Hot Trends"
    }
  ]
}
{% endschema %}
