
{% style %}

  :root {
  
    {% assign customFontFamily = 'Circular Std' %}

    --font-family: {{ customFontFamily }}, Helvetica, Arial, sans-serif;

  }

  @font-face {
    font-family: {{ customFontFamily }};
    src: url('{{ "CircularStd-Book.eot" | asset_url }}');
    src: url('{{ "CircularStd-Book.eot" | asset_url }}#iefix') format('embedded-opentype'), url('{{ "CircularStd-Book.woff2" | asset_url }}') format('woff2'), url('{{ "CircularStd-Book.woff" | asset_url }}') format('woff'), url('{{ "CircularStd-Book.ttf" | asset_url }}') format('truetype'), url('{{ "CircularStd-Book.svg" | asset_url }}#CircularStd-Book') format('svg');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: {{ customFontFamily }};
    src: url('{{ "CircularStd-Bold.eot" | asset_url }}');
    src: url('{{ "CircularStd-Bold.eot" | asset_url }}#iefix') format('embedded-opentype'), url('{{ "CircularStd-Bold.woff2" | asset_url }}') format('woff2'), url('{{ "CircularStd-Bold.woff" | asset_url }}') format('woff'), url('{{ "CircularStd-Bold.ttf" | asset_url }}') format('truetype'), url('{{ "CircularStd-Bold.svg" | asset_url }}#Aeonik-Regular') format('svg');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }

{% endstyle %}
