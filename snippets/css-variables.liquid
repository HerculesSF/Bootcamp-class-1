{% style %}

  :root {
    --color-text: #000000;
    --color-border: #DADADA;
    --color-white: #fff;
    --color-primary: #D22026;
    --color-border: #DADADA;
    --color-focus: #D22026;

    --focus-visible: 0 0 0 3px #D22026;

    --input-placeholder: #767676;
    --input-radio-and-checkbox: #000000;

    --btn-background: #000000;
    --btn-color: #FFF;
