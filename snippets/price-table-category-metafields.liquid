{{ 'price-table-category.css' | asset_url | stylesheet_tag }}

<div data-section class="price-table-category {% unless full_width %}container page-container{% endunless %}" >

    <h2 class="price-table-category__heading">{{title}}</h2>

    <swiper-slider class="swiper swiper__product-card"  
    data-view-mobile="1.1"
    data-view-tablet="3.2"
    data-view-tablet-extra="4"
    data-view-desktop="4" 
    data-options='{ "pagination": { "el": ".swiper-pagination", "dynamicBullets": false } }' style="width: 100%;display: block;">

        <div class="swiper-wrapper">

            {% for block in items_blocks.price_table_items_images %}
                
                {%- assign img_url = block.cloudinary_src | append:'w_1600' -%}
                {%- assign itemLines = block.alt | split: '-' -%}

                {% if img_url != blank %}
                    
                <div class="swiper-slide">

                    <div class="price-table-category__item">

                        <div class="price-table-category__image-wrapper">
                            {% render 'image', src: img_url, aspect_ratio: block.aspect_ratio %}
                        </div>

                        <div class="price-table-category__text-wrapper">
                            <div class="price-table-category__item-heading" >{{ itemLines[0] }}</div>
                            <div class="price-table-category__price" >{{ itemLines[1] }}</div>
                        </div>

                    </div>

                </div>
                {% endif %}

            {% endfor %}

        </div>

        <div class="swiper-pagination"></div>

        {% if items_blocks.price_table_items_images | size > 4 %}
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        {% endif %}

    </swiper-slider>

</div>
