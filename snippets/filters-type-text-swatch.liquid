<ul class="filters__text-options">

    {% for value in filter.values %}
    
        {% if value.count > 0 %}

            <li class="filters__text-option-item">

                <span>
                
                    <input type="checkbox"
                        autocomplete="off"
                        name="{{ value.param_name }}"
                        value="{{ value.value }}"
                        id="Filter-{{ filter.label | escape }}-{{ forloop.index }}"
                        {% if value.active %}checked{% endif %}
                        {% if value.count == 0 and value.active == false %}disabled{% endif %}
                        data-filter-input-option >

                    <label for="Filter-{{ filter.label | escape }}-{{ forloop.index }}" class="facet-checkbox">{{ value.label | escape }}</label>

                </span>

            </li>
            
        {% endif %}
        
    {% endfor %}

</ul>