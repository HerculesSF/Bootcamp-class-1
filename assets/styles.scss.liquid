// Colors
// ------------------------------------------------------------------------------------------------

$color-border: #CCCCCC;

// fonts
// ------------------------------------------------------------------------------------------------
@font-face {
    font-family: 'DM Serif Display';
    src: url('{{ "DMSerifDisplay-Regular.eot" | asset_url}}');
    src: url('{{ "DMSerifDisplay-Regular.eot?#iefix" | asset_url}}') format('embedded-opentype'),
        url('{{ "DMSerifDisplay-Regular.woff2" | asset_url}}') format('woff2'),
        url('{{ "DMSerifDisplay-Regular.woff" | asset_url}}') format('woff'),
        url('{{ "DMSerifDisplay-Regular.ttf" | asset_url}}') format('truetype'),
        url('{{ "DMSerifDisplay-Regular.svg#DMSerifDisplay-Regular" | asset_url}}') format('svg');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}
body{
    font-size: 16px;
    line-height: 24px;
}

// Headings
// ------------------------------------------------------------------------------------------------
h1, h2, h3, h4, h5, h6 {
    font-style: normal;
    font-weight: bold;
    margin: 0 0 16px 0;
    padding: 0;
}

h1 {
    font-size: 32px;
    line-height: 40px;
    font-style: normal;
    font-weight: bold;
    margin: 0 0 16px 0;
    padding: 0;
}
h2 {
    font-size: 24px;
    line-height: 32px;
    font-style: normal;
    font-weight: bold;
    margin: 0 0 16px 0;
    padding: 0;
}
h3 {
    font-size: 16px;
    line-height: 24px;
    font-style: normal;
    font-weight: bold;
    margin: 0 0 16px 0;
    padding: 0;
}
h4, h5, h6 {
    font-size: 16px;
    line-height: 16px;
    font-style: normal;
    font-weight: bold;
    margin: 0 0 16px 0;
    padding: 0;
}

.h1-seirf,
.h2-seirf,
.h3-seirf,
.h4-seirf,
.h6-seirf,
.h5-seirf {
    font-family: 'DM Serif Display';
    font-weight: normal;
}

.heading-uppercase {
    font-weight: bold;
    letter-spacing: 0.1rem;
    text-transform: uppercase;
}

h1.heading-uppercase {
    font-size: 24px;
    line-height: 32px;
}

h2.heading-uppercase {
    font-size: 16px;
    line-height: 24px;
}

.heading-uppercase-small {
    font-weight: bold;
    letter-spacing: 0.1rem;
    text-transform: uppercase;
    font-size: 12px;
    line-height: 16px;
}

// Typograph
// ------------------------------------------------------------------------------------------------
p{
    font-size: 16px;
    line-height: 24px;
    margin: 16px;
}

.crossed-text{
    font-size: 16px;
    line-height: 24px;
    text-decoration-line: line-through;
    color: $color-border;
}