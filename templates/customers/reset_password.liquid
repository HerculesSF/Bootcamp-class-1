{{ 'page-reset-password.css' | asset_url | stylesheet_tag }}

<div class="reset-page page-container" data-reset-form> 

  <div class="reset-page__form">

    <div class="container">

      <h1>
        {{ 'customer.reset_password.title' | t }}
      </h1>

      {%- form 'reset_customer_password' -%}

        {%- if form.errors -%}

          <div class="message--error">
            <h3 autofocus>
              <span class="visually-hidden">{{ 'accessibility.error' | t }} </span>
              {{ 'customer.login.form_error_message' | t }}
            </h3>
            <ul>
              {%- for field in form.errors -%}
                <li>
                  {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                  {%- else -%}
                    <a href="#{{ field }}">
                      {{ form.errors.translated_fields[field] | capitalize }}
                      {{ form.errors.messages[field] }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        {%- comment -%} Password {%- endcomment -%}
        <div class="field">      
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new-password"
            {% if form.errors contains 'password' %}
              aria-invalid="true"
              aria-describedby="password-error"
            {% endif %}
            placeholder="{{ 'customer.reset_password.password' | t }}"
          >
          <label for="password">
            {{ 'customer.reset_password.password' | t }}
          </label>
        </div>

        {%- comment -%} Password Confirmation {%- endcomment -%}
        <div class="field">      
          <input
            type="password"
            name="customer[password_confirmation]"
            id="password_confirmation"
            autocomplete="new-password"
            {% if form.errors contains 'password_confirmation' %}
              aria-invalid="true"
              aria-describedby="password_confirmation-error"
            {% endif %}
            placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
          >
          <label for="password_confirmation">
            {{ 'customer.reset_password.password_confirm' | t }}
          </label>
        </div>

        <br>
        <div class="reset-page__links-div">
          <div>
            <button>
              {{ 'customer.reset_password.submit' | t }}
            </button>
          </div>
        </div>

      {%- endform -%}
    </div>

  </div>

</div>
